<div class="row justify-content-center">

  <h1 class="text-center polarText display-1">Register</h1>
  <% if(messages.length > 0) { %>
    <div id="messageArea" class="alert alert-danger">
      <%= messages %>
    </div>
  <% } %>
  <form action="" method="POST" class="my-4 border border-dark col-5 logoGray border-3">
    <div class="row justify-content-center my-4">
      <label for="username" class="col-4 text-end">User Name</label>
      <input type="text" class="col-5" id="username" placeholder=" (if we are using it)" name="username" required>
      <div class="col-2"></div>
    </div>
    <div class="row justify-content-center my-4">
      <label for="email" class="col-4 text-end">E-mail</label>
      <input type="email" class="col-5" id="email" placeholder="myemail@email.com" name="email" required>
      <div class="col-2"></div>
    </div>
    <div class="row justify-content-center my-4">
      <label for="contactNumber" class="col-4 text-end">Contact Number</label>
      <input type="number" class="col-5" id="ContactNumber" placeholder="eg. 444-4444" name="contactnumber" required>
      <div class="col-2"></div>
    </div>
    <div class="row justify-content-center my-4">
      <label for="password" class="col-4 text-end">Password</label>
      <input type="password" class="col-5" id="password" placeholder="Password" name="password" required>
      <div class="col-2"></div>
    </div>
    <div class="row justify-content-center">
      <button type="submit" class="btn btn-primary col-3 my-3">Register</button>
      <br>
      <p class="text-center"><a href="/login">Click Here</a> to if you already have an account</p>
    </div>
  </form>
  <h3 class="polarText">Feel free to delete or add more as you need. (this is a message to the developers)</h3>

</div>
