<h1 class="text-center polarText display-1">Available Survey</h1>
<div class="row">
  <div class="col">
    <table class="table border border-dark">
      <thead>
        <br><br>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Title</th>
          <th scope="col">Available From</th>
          <th scope="col">Expires At</th>
          <th></th>
        </tr>
      </thead>
      <tbody>

        <!--Repeatable Row Template-->

        <% for(let count = 0; count < survey.length; count++){ %>
        <tr>
          <th scope="row" class="polarPurpleText"><%= count + 1 %></th>
          <td><%= survey[count].title %></td>
          <td><%= displayDate(survey[count].activeFrom) %></td>
          <td><%= displayDate(survey[count].expiresAt) %></td>
          <td class="text-center"><a href="/question/<%= survey[count]._id %>" class="btn btn-warning editBTN"> Take</a>
          </td>
        </tr>
        <% } %>
      </tbody>
    </table>
    <!--Table Goes Here-->
  </div>
</div>
