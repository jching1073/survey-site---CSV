{
    "compilerOptions": {
        "target": "ES2021",
        "module": "CommonJS",
        "sourceMap": true,
        "rootDir": "./server",
        "outDir": "./dist",
        "strict": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "alwaysStrict": true,
        "removeComments": true,
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true // do not run type checks on *.d.ts files; prevents error from dependencies
    },
    "include": [
        "./server/**/*"
    ]
}
